{% extends 'base.html.twig' %}
{% block body %}
    {% include 'components/navbar.html.twig' with {'active': 'register'} %}
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-md-auto">
                <h3>Регистрация</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                {{ form_start(form) }}
                {{ form_row(form.email) }}
                {{ form_row(form.password) }}
                {{ form_row(form.firstName) }}
                {{ form_row(form.familyName) }}
                {{ form_row(form.register) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}